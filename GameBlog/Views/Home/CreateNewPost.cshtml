@model GameBlog.ViewModels.PostViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h1>Create new post</h1>

<form asp-controller="Home" asp-action="CreateNewPost" method="post">
    <label asp-for="CurrentPost.Title"></label>
    <input type="text" asp-for="CurrentPost.Title" />
    <br />
    <label asp-for="CurrentPost.Content"></label>
    <textarea asp-for="CurrentPost.Content"></textarea>
    <br />
    <select asp-for="@Model.CurrentPost.CategoryId" asp-items="Model.AllCategories"></select>

    <br />
    <input type="submit" value="Save & Publish" />


</form>