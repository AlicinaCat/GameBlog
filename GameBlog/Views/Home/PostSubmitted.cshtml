@model GameBlog.ViewModels.PostViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<head>
    <link href="@Url.Content("~/CSS/style.css")" rel="stylesheet" type="text/css" />
</head>

<ul>
    <li>
        <h1>Post successfully published!</h1>

        <h2>@Model.CurrentPost.Title</h2>
        <p>@Model.CurrentPost.Content</p>
        <br />
        <p>Posted @Model.CurrentPost.Date</p>
        <br /><br /><br />
                    <img class="icon" src="@Url.Content("~/Pictures/psCirclePink.png")" alt="IMAGES" />
        <a asp-controller="Home" asp-action="Index">Back to main page</a>
        <br /><br />
        <img class="center" width="100" src="@Url.Content("~/Pictures/controllerBlue.png")" alt="IMAGES" />
    </li>
</ul>
