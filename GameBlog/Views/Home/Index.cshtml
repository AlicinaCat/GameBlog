@model List<GameBlog.Models.Post>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h1>Welcome to the blog!</h1>

<ul>
@foreach (var post in Model)
{
    <li>
        <a asp-controller="Home" asp-action="ShowPost" asp-route-id="@post.Id">
            <h3>@post.Title</h3>
        </a>
    @*<p>@post.Content</p>*@
    <h6>@post.Date</h6>

    </li>
}
    </ul>